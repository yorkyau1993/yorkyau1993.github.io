    const ENTRY_ID_CODE = "entry.1435004792"; // å‡è¨­ä½ ç”¨åŸæœ¬ Rank çš„ ID æˆ–è€…æ–°å‰µä¸€å€‹

    const fullDB = [
        { c: "åŸºç¤çŸ¥è­˜", q: "ã€Šç•¶å±æ©Ÿä¾†è‡¨æ™‚ã€‹æ‰‹å†Šçš„ä¸»è¦ç›®çš„ç‚ºä½•ï¼Ÿ", a: "ä¿éšœæ°‘çœ¾åœ¨å±æ©Ÿä¾†è‡¨æ™‚èƒ½è‡ªæ•‘ã€äº’æ•‘ã€æ­£ç¢ºæ‡‰è®Š", w: [{ t: "æ•™å°æ°‘çœ¾å¦‚ä½•è³¼è²·æ§æ", bad: "ğŸ’€ åæ§½ï¼šä½ ä»¥ç‚ºé€™è£¡æ˜¯å¾·å·å—ï¼Ÿ" }, { t: "è®“æ”¿åºœå…¨æ¬Šè² è²¬æ•‘æ´", bad: "ğŸ’€ åæ§½ï¼šæ¨™æº–å·¨å¬°å¿ƒæ…‹ã€‚" }, { t: "æ¨å»£è§€å…‰æ—…éŠ", bad: "ğŸ’€ åæ§½ï¼šæ­¡è¿åƒåŠ ã€Œæœ«æ—¥å»¢å¢Ÿä¸€æ—¥éŠã€ã€‚" }], desc: "âœ… æ•™å®˜é»è©•ï¼šé€™æœ¬æ‰‹å†Šå°±æ˜¯ä½ çš„ä¿å‘½ç¬¦ã€‚" },
        { c: "åŸºç¤çŸ¥è­˜", q: "å°ç£å¸¸è¦‹çš„è‡ªç„¶ç½å®³æœ‰å“ªäº›ï¼Ÿ", a: "åœ°éœ‡ã€é¢±é¢¨ã€è±ªé›¨ã€åœŸçŸ³æµã€ä¹¾æ—±", w: ["é¾æ²é¢¨ã€æš´é¢¨é›ª", "ç«å±±çˆ†ç™¼", "æ²™æ¼ åŒ–"], desc: "âœ… æ•™å®˜é»è©•ï¼šåœ°éœ‡èˆ‡é¢±é¢¨æ˜¯å°ç£ç‰¹ç”¢ã€‚" },
        // ... (è«‹å°‡åŸæœ¬ V9 çš„å®Œæ•´é¡Œåº«è²¼å›æ­¤è™•)
    ];

    let playerName = "", playerSchool = "", questionCount = 10, currentQuestions = [], wrongAnswers = [], allAnswers = [], currentIndex = 0, score = 0, startTime = 0, gameMode = 'personal';

    function selectCount(n) {
        questionCount = n;
        document.querySelectorAll('.mode-select-btn').forEach(b => b.classList.remove('selected'));
        if(document.getElementById(`btn-c-${n}`)) document.getElementById(`btn-c-${n}`).classList.add('selected');
    }

    function toSchoolScreen() { showScreen('screen-school-login'); }
    function backToStart() { showScreen('screen-start'); }

    function startGame(mode) {
        let inputName, inputSchool, errorMsg;
        gameMode = mode;
        if (mode === 'school') {
            inputName = document.getElementById('player-team'); inputSchool = document.getElementById('player-school'); errorMsg = document.getElementById('school-error');
            if (!inputSchool.value.trim() || !inputName.value.trim()) { showError(errorMsg, "è«‹å¡«å¯«å®Œæ•´è³‡è¨Šï¼"); return; }
            playerSchool = inputSchool.value.trim();
        } else {
            inputName = document.getElementById('player-name'); errorMsg = document.getElementById('start-error');
            if (!inputName.value.trim()) { showError(errorMsg, "è«‹è¼¸å…¥æ‚¨çš„åå­—ï¼"); return; }
            playerSchool = "";
        }
        playerName = inputName.value.trim();
        document.getElementById('quiz-player-name').innerText = playerName;
        if(errorMsg) errorMsg.style.display = 'none';

        let pool = [...fullDB];
        while(pool.length < questionCount) pool = pool.concat(fullDB);
        currentQuestions = pool.sort(() => Math.random() - 0.5).slice(0, questionCount);
        
        wrongAnswers = []; allAnswers = []; currentIndex = 0; score = 0; startTime = Date.now();
        showScreen('screen-quiz'); loadQuestion();
    }

    function showError(el, msg) { el.innerText = msg; el.style.display = 'block'; setTimeout(() => { el.style.display = 'none'; }, 2000); }
    function showScreen(id) { document.querySelectorAll('.screen').forEach(s => s.classList.remove('active')); document.getElementById(id).classList.add('active'); window.scrollTo(0,0); }

    function loadQuestion() {
        document.getElementById('feedback-modal').style.display = 'none';
        const qData = currentQuestions[currentIndex];
        document.getElementById('quiz-progress').innerText = `${currentIndex + 1} / ${questionCount}`;
        document.getElementById('q-cat').innerText = qData.c;
        document.getElementById('q-text').innerText = qData.q;
        let opts = [{ t: qData.a, correct: true, bad: null }];
        if (qData.w) {
            let wrongs = [...qData.w].sort(() => Math.random() - 0.5).slice(0, 3);
            wrongs.forEach(w => opts.push(typeof w === 'string' ? { t: w, correct: false, bad: "ğŸ’€ é¸éŒ¯äº†ï¼" } : { t: w.t, correct: false, bad: w.bad }));
        }
        opts.sort(() => Math.random() - 0.5);
        const list = document.getElementById('options-list'); list.innerHTML = "";
        opts.forEach(opt => {
            let btn = document.createElement('div'); btn.className = 'option-btn'; btn.innerText = opt.t;
            btn.onclick = () => checkAnswer(btn, opt.correct, qData, opt.bad);
            list.appendChild(btn);
        });
    }

    function checkAnswer(btn, isCorrect, qData, specificBad) {
        document.querySelectorAll('.option-btn').forEach(b => b.style.pointerEvents = 'none');
        allAnswers.push({ q: qData.q, u: btn.innerText, a: qData.a, c: isCorrect ? 'O' : 'X', bad: specificBad });
        if(isCorrect) {
            btn.classList.add('correct'); score++;
            if(gameMode === 'challenge') setTimeout(nextQuestion, 500); else setTimeout(() => showFeedback(true, qData, null), 500);
        } else {
            btn.classList.add('wrong'); wrongAnswers.push({ ...qData, specificBad: specificBad });
            document.querySelectorAll('.option-btn').forEach(b => { if(b.innerText === qData.a) b.classList.add('correct'); });
            if(gameMode === 'challenge') setTimeout(nextQuestion, 1000); else setTimeout(() => showFeedback(false, qData, specificBad), 800);
        }
    }

    function showFeedback(isCorrect, qData, specificBad) {
        const modal = document.getElementById('feedback-modal');
        const title = document.getElementById('feedback-title');
        const cons = document.getElementById('consequence-area');
        cons.style.display = 'none';
        title.innerHTML = isCorrect ? "â­• ç­”å°äº†ï¼" : "âŒ ç­”éŒ¯äº†ï¼";
        title.style.color = isCorrect ? "#006400" : "#8B0000";
        if (!isCorrect && (specificBad || qData.bad)) {
            cons.style.display = 'block'; cons.innerHTML = `<div class="consequence-box">${specificBad || qData.bad}</div>`;
        }
        document.getElementById('feedback-content').innerHTML = `<strong style="color:#000; font-size:1.2rem; display:block; margin-bottom:15px;">âœ” æ­£è§£ï¼š${qData.a}</strong>${qData.desc}`;
        modal.style.display = 'flex';
    }

    function nextQuestion() { currentIndex++; if(currentIndex < questionCount) loadQuestion(); else endGame(); }

    function endGame() {
        document.getElementById('feedback-modal').style.display = 'none';
        let finalScore = Math.round((score / questionCount) * 100);
        let timeUsed = Math.floor((Date.now() - startTime) / 1000);
        let survivorCode = "";

        if (finalScore >= 60) {
            survivorCode = generateSurvivorCode();
            showScreen('screen-result-good');
            document.getElementById('score-good').innerText = finalScore;
            document.getElementById('correct-good').innerText = score;
            document.getElementById('time-good').innerText = timeUsed + "s";
            document.getElementById('name-good').innerText = playerName;
            document.getElementById('survivor-code').innerText = survivorCode;
            if(gameMode === 'school') { document.getElementById('school-good').style.display = 'block'; document.getElementById('school-good').innerText = playerSchool; }

            // â˜… ç”¢ç”Ÿ QR Code
            document.getElementById("qrcode").innerHTML = ""; 
            new QRCode(document.getElementById("qrcode"), {
                text: survivorCode, 
                width: 100, height: 100,
                colorDark : "#000000", colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H
            });

        } else {
            document.body.classList.add('bad-end');
            showScreen('screen-result-bad');
            document.getElementById('score-bad').innerText = finalScore;
            document.getElementById('name-bad').innerText = playerName;
            if(gameMode === 'school') { document.getElementById('school-bad').style.display = 'block'; document.getElementById('school-bad').innerText = playerSchool; }
        }
        
        sendData(playerName, finalScore, timeUsed, survivorCode, wrongAnswers);
    }

    // --- ç§˜å¯†æ•¸å­—ç·¨ç¢¼ç”¢ç”Ÿå™¨ ---
    function generateSurvivorCode() {
        const chars = "ABCDEFGHJKLMNPQRSTUVWXYZ23456789"; 
        const SECRET_SALT = 9527; // â˜… ä½ çš„ç§˜å¯†æ•¸å­—

        let code = "";
        let sum = 0;
        
        for (let i = 0; i < 5; i++) {
            let index = Math.floor(Math.random() * chars.length);
            code += chars[index];
            sum += index * (i + 1); 
        }
        
        sum += SECRET_SALT; // åŠ å…¥é¹½

        let checkIndex = sum % chars.length;
        code += chars[checkIndex];
        
        return code;
    }

    function sendData(name, score, time, code, wrongList) {
        const formData = new FormData();
        formData.append(ENTRY_ID_SCHOOL, playerSchool);
        formData.append(ENTRY_ID_NAME, name);
        formData.append(ENTRY_ID_SCORE, score);
        formData.append(ENTRY_ID_TIME, time);
        formData.append(ENTRY_ID_CODE, code);
        let wrongText = wrongList.length > 0 ? wrongList.map(w => w.q).join(" | ") : "ç„¡";
        formData.append(ENTRY_ID_WRONG, wrongText);

        fetch(GOOGLE_FORM_URL, { method: "POST", body: formData, mode: "no-cors" }).catch(err => console.error(err));
    }

    function showReview() {
        if(wrongAnswers.length === 0) { alert("ğŸ‰ å®Œç¾å…¨å°ï¼ç„¡éœ€è¤‡ç¿’ï¼"); return; }
        const list = document.getElementById('review-list'); list.innerHTML = "";
        wrongAnswers.forEach((item, index) => {
            let badHtml = item.specificBad ? `<div style="color:#d00; margin-top:5px; font-weight:bold;">${item.specificBad}</div>` : "";
            list.innerHTML += `<div class="review-item"><span class="q-cat-label" style="font-size:0.8rem; margin-bottom:5px;">${item.c}</span><div style="font-size:1.1rem; font-weight:900; margin-bottom:5px;">${index + 1}. ${item.q}</div><div class="review-ans">âœ” æ­£è§£ï¼š${item.a}</div>${badHtml}<div class="review-desc">${item.desc}</div></div>`;
        });
        showScreen('screen-review');
    }

    function backToResult() { document.body.classList.contains('bad-end') ? showScreen('screen-result-bad') : showScreen('screen-result-good'); }

    function downloadImage(id, color) {
        const el = document.getElementById(id);
        const btn = event.target;
        const orgText = btn.innerText;
        btn.innerText = "ğŸ”„ è™•ç†ä¸­..."; btn.disabled = true;
        
        const orgW = el.style.width; const orgP = el.style.padding;
        el.style.width = "800px"; el.style.padding = "60px 120px";
        
        html2canvas(el, { scale: 2, useCORS: true, backgroundColor: color, windowWidth: 1600 }).then(canvas => {
            el.style.width = orgW; el.style.padding = orgP;
            const link = document.createElement('a'); link.download = `ç”Ÿå­˜æ¸¬é©—æˆ°å ±_${playerName}.png`;
            link.href = canvas.toDataURL("image/png"); link.click();
            btn.innerText = orgText; btn.disabled = false;
            document.getElementById('toast').style.display='block'; setTimeout(()=>document.getElementById('toast').style.display='none', 3000);
        });
    }

    function fireworksEffect() { var duration=3000, end=Date.now()+duration; var interval=setInterval(function(){ if(Date.now()>end) return clearInterval(interval); confetti({ particleCount: 50*( (end-Date.now())/duration ), origin:{x:Math.random(), y:Math.random()-0.2}, zIndex:9999 }); }, 250); }
    function starsEffect() { var end=Date.now()+2000; (function frame(){ confetti({ particleCount:5, angle:60, spread:55, origin:{x:0}, shapes:['star'], colors:['#FFFF00','#FF0000'] }); confetti({ particleCount:5, angle:120, spread:55, origin:{x:1}, shapes:['star'], colors:['#FFFF00','#FF0000'] }); if(Date.now()<end) requestAnimationFrame(frame); }()); }
    </script>
